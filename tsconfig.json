{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "experimentalDecorators": true,
    "jsx": "preserve",
    "typeRoots": [
      "node_modules/@types",
      "node_modules/@mtfe/wets-types",
      "src/types/**/*"
    ],
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "importHelpers": true,
    "strict": true,
    "lib": [
      "dom",
      "es2016",
      "esnext"
    ]
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ]
}
